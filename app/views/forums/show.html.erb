<div class='container'>
  <h1><%= @forum.title %></h1>
  <h3><%= @forum.description %></h3>
  <% @forum.posts.each do |post| %>
  <div class='card' id='comment'>
    <h4><b>Username: </b><i><%= post.user.first_name %></i></h4>
    <h5><%= post.title %></h5>
    <p><%= post.content %></p>
    <%= link_to 'Edit post', edit_forum_post_path(@forum), class:'btn btn-secondary' %>
  </div>
  <% end %>
  <br>
  <%= link_to 'New Post', new_forum_post_path(@forum), class:'btn btn-dark'%>
</div>

<style>
  h1 {
    margin-top:25px;
    font-family: 'IBM Plex Sans', sans-serif;
    margin-bottom:20px;
    font-weight: bold;
  }
  h3 {
    font-family: 'Oswald', sans-serif;
    margin-bottom:30px;
  }
  #comment {
    padding:30px;
  }
  h5 {
    margin-top:15px;
  }

  p {
    margin-top:20px;
  }
  a {
    margin-top:15px;
    margin-bottom:20px;
  }
</style>
