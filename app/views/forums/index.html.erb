<div class='container'>
  <h1 style='text-align: center;'>Welcome to Forums Page</h1>
  <hr>
  <h3 style='text-align: center;'>Take a look around our forums and join the discussions.</h3>
  <br>
  <br>
  <div class="arrow bounce"></div>
  <% @forums.each do |forum|  %>
  <div class='card' id='forumCard'>
    <div class='card-body'>
      <h2><%= forum.title %></h2>
      <hr>
      <p><b>Forum Description: </b><%= forum.description %></p>
      <br>
      <div><%= link_to "Enter Forum", forum_path(forum), class:"btn btn-light", id:'enterButton' %></div>
    </div>
  </div>
  <% end  %>
  <br>
  <div><%= link_to "New Forum", new_forum_path, class:'btn btn-light', id:'newButton' %></div>
  <br>
</div>

<script>
  // Some object properties are determined in this JS part!
  document.getElementById('forumCard').style.marginTop = "40px";
  document.getElementById('forumCard').style.marginBottom = "40px";

  // styling paraghraphs and headings
  document.querySelector('p').style.textAlign = 'center';
  document.querySelector('p').style.marginTop = '20px';
  document.querySelector('h1').style.fontFamily = 'Oswald', sans-serif;
  document.querySelector('h3').style.fontFamily = 'Yusei Magic', sans-serif;
</script>

<style>
  h1 {
    margin-top:50px;
    font-family: 'Pangolin', cursive;
    color:#568EA3;
  }
  h3 {
    margin-top:30px;
    color:#68C3D4;
  }
  #forumCard {
    background:#FFE8D1;
    border:2px solid #826251;
  }
  h2 {
    margin-bottom: 20px;
    color: #826251;
  }
  #enterButton {
    margin-bottom: 20px;
    display:block;
    width:30%;
    margin-left:auto;
    margin-right:auto;
    color:#826251;
    border-radius:25%;
  }
  #newButton {
    margin-top:30px;
    margin-bottom: 20px;
    display:block;
    width:30%;
    margin-left:auto;
    margin-right:auto;
    color:#568EA3;
    font-weight: bold;
    border:2px solid #568EA3;
    border-radius:25%;
  }
  p {
    margin-top:30px;
    text-align:center;
    color:#826251;
    font-size:18px;
  }
</style>
