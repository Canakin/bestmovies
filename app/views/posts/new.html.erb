
<div class='container'>
  <div class='card-body'>
    <h3>Create a new post for forum</h3>
    <%= simple_form_for [@forum, @post], url: forum_path(:forum) do |f| %>
    <%= f.input :title, label: 'Post Title:'  %>
    <%= f.input :content, label: 'Content of your post:' %>
    <%= f.submit %>
    <% end %>
  </div>
</div>

<style>
  h3 {
    margin-top:20px;
    margin-bottom: 20px;
    font-family:'Oswald', sans-serif;
    font-weight: bold;
  }
  .container {
    margin-bottom: 35px;
    margin-top: 30px;
  }
  label {
    margin-bottom:15px;
  }
</style>
