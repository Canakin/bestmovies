<div class='container'>
  <div class='card-body'>
    <h3>Edit your post</h3>
    <%= simple_form_for [:forum, @post] do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.submit %>
    <% end %>
  </div>
</div>

