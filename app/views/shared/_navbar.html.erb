<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/ds2odybte/image/upload/v1606854651/Best_movies_esqfd2.jpg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item" id="nav_link">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item" id='nav_link'>
            <%= link_to "All Movies", movies_path, class: "nav-link" %>
        </li>
        <li class="nav-item" id='nav_link'>
            <%= link_to "Top 5 Movies", top_movies_path, class: "nav-link" %>
        </li class="nav-item">
        <li class="nav-item" id='nav_link'>
            <%= link_to "Add a New Movie", new_movie_path, class: "nav-link" %>
        </li>
        <li class="nav-item" id='nav_link'>
            <%= link_to "Forums", forums_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "data:image/png;base64,", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<script>
  let ul_list_items = document.querySelectorAll('li');
  ul_list_items.forEach(x => {
    x.addEventListener('click', function() {
      this.classList.toggle('active');
    })
  });
</script>
