<h2 style='text-align:center;margin-top: 10px;'>Stars</h2>
<hr>
<div class='container'>
  <ul id='starList'>
  <% @stars.each do |star| %>
    <li><h2><%="#{star.fullname}"%></h2>
    <% if star.photo.attached?  %>
      <%= image_tag star.photo, class:'img_top' %>
    <% end %>
    </li>
    <li><h3>Mini Bio:</h3><%= star.minibio %></li>
    <li><h3>Birth Year:</h3><%= star.birthyear %></li>
    <li><h3>Height:</h3><%= "#{star.height} cm" %></li>
    <li><h3>Top Movies</h3><%= star.top_movies %></li>
    <hr>
  <% end %>
  </ul>

</div>

<div class='btn btn primary' id='centered'>
  <button><%= link_to 'New Actor', new_star_path %></button>
</div>
