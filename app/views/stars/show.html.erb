<h2><%= @star.fullname %></h2>
<hr>
<% if @star.photo.attached?  %>
  <%= image_tag @star.photo, class:'img_top' %>
<% end %>
<br>
<div class='container'>
  <p><b>Year of Birth:</b> <%= @star.birthyear %>
  <p><b>Mini Bio:</b> <%= @star.minibio %>
  <p><b>Nationality:</b> <%= @star.nationality %>
  <p><b>Top Movies:</b> <%= @star.top_movies %>
  <p><b>Height:</b> <%= @star.height %>
</div>
