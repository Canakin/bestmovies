<div class='container'>
  <br>
  <h2><strong>Top Movies</strong></h2>
  <hr size=10 color=gray>
  <div id='top-list'>
    <ol>
      <% @movies.sort {|a,b| b.imdb_score <=> a.imdb_score}.first(5).each do |movie|  %>
      <div id='list_items'>
        <li>
          <p style='font-size:22px'><%= "#{movie.title} (#{movie.year}) "%></p>
          <p><b>Rating:</b><%= " #{movie.imdb_score} "%></p>
          <%= link_to ' ðŸ‘‰   ', movie_path(movie) %>
        </li>
        <%= image_tag movie.photo, class:'img_top', id:'mov_pic'%>
      </div>
      <hr size='6' color='#ADD8E6'>
      <% end %>
    </ol>
  </div>
</div>

<style>
  #mov_pic {
    width:500px;
  }
  h2 {
    color:#191970;
  }

  #top-list {
    margin-bottom:60px;
  }

  ol {
    list-style-type: upper-roman;
  }

  #top-list ol li p {
    font-size:20px;
  }
  a {
    font-size: 36px;
  }

  #list_items {
    display:flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 30px;
    margin-bottom: 30px;
  }

</style>
