<div class='container'>
  <div>
    <h1>Top Movies</h1>
    <hr size=10 color=#826251>
    <div>
        <ol>
          <% @movies.sort {|a,b| b.imdb_score <=> a.imdb_score}.first(5).each do |movie| %>
            <% if movie.catego == "movies"  %>
              <li>
                <p style='font-size:22px'><%= "#{movie.title} (#{movie.year}) "%></p>
                <p><b>Rating:</b><%= " #{movie.imdb_score} "%></p>
                <%= link_to ' ðŸ‘‰   ', movie_path(movie) %>
              </li>
              <%= image_tag movie.photo, class:'img_top', id:'mov_pic'%>
            <% end %>
          <% end  %>
        </ol>
      </div>
  </div>

  <div>
